<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="6dp"
    android:background="@color/color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:gravity="top">

        <ImageView
            android:id="@+id/imageTransaction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_transaction"
            app:tint="@color/black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/textTransactionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Зняття коштів за послугу"
                android:fontFamily="@font/gilroy"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                tools:text="Інтернет: Пакет - 149"
                android:fontFamily="@font/gilroy"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                tools:text="21.12.2023"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/transaction_green"
            tools:text="-11.45 грн"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="16sp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

    <View
        android:id="@+id/transactionDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        android:alpha="0.3"/>

</LinearLayout>