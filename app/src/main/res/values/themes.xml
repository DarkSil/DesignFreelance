<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DesignFreelance" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationViewInactive"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/service_gray</item>
    </style>

    <style name="BottomNavigationViewActive"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>